#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Commit message format validation
commit_msg=$(cat "$1")

# Check for conventional commit format: type(scope?): subject
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,}"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit messages must follow the Conventional Commits format:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat: add new calculator feature"
  echo "  fix(ui): resolve button alignment issue"
  echo "  docs: update README with setup instructions"
  exit 1
fi
